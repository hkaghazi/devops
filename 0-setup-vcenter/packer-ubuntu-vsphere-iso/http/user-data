#cloud-config
autoinstall:
  version: 1
  identity:
    hostname: ubuntu-server
    username: ubuntu
    password: "$6$rounds=4096$wQ1Q2w3E4r5T6y7U$8v9W0x1Y2z3A4b5C6d7E8f9G0h1I2j3K4l5M6n7O8p9Q0r1S2t3U4v5W6X7Y8Z9a0B1C2"
  keyboard:
    layout: en
    variant: us
  locale: en_US
  ssh:
    install-server: true
    allow-pw: true
  storage:
    layout:
      name: direct
  apt:
    primary:
      - arches: [i386, amd64]
        uri: "https://repo.iut.ac.ir/repo/Ubuntu"
  packages:
    - apt-transport-https
    - ca-certificates
    - curl
    - gnupg-agent
    - software-properties-common
    - ufw
    - unzip
    - python3
    - python3-pip
    - sshpass
    - open-vm-tools
  early-commands:
    - systemctl stop ssh
  late-commands:
    - sed -i -e 's/^#\?PasswordAuthentication.*/PasswordAuthentication yes/g' /target/etc/ssh/sshd_config
    - sed -i -e 's/^#\?PermitRootLogin.*/PermitRootLogin yes/g' /target/etc/ssh/sshd_config
    - echo 'ubuntu ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/ubuntu
    - chmod 440 /target/etc/sudoers.d/ubuntu
    - curtin in-target --target=/target -- apt-get update
    - curtin in-target --target=/target -- apt-get upgrade --yes
